<%- include('partials/header', {page: 'article-view'}) %>

<div class="container mt-4">
  <div class="card">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
      <h5 class="mb-0"><i class="bi bi-file-text"></i> Article Preview</h5>
      <% if (isAdmin) { %>
        <a href="/admin/employee-dashboard?employeeId=<%= employeeId %>" class="btn btn-sm btn-light">
          <i class="bi bi-arrow-left"></i> Back to Employee Dashboard
        </a>
      <% } else { %>
        <a href="/history" class="btn btn-sm btn-light">
          <i class="bi bi-arrow-left"></i> Back to History
        </a>
      <% } %>
    </div>
    
    <div class="card-body">
      <% if (error) { %>
        <div class="alert alert-danger" role="alert">
          <i class="bi bi-exclamation-triangle-fill"></i> <%= error %>
        </div>
      <% } %>
      
      <div class="article-container">
        <h1 class="article-title mb-4"><%= article.title %></h1>
        
        <div class="article-meta mb-4">
          <span class="badge bg-info text-white me-2">Keyword: <%= keyword %></span>
        </div>
        
        <div class="article-content">
          <%- article.content %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .article-container {
    max-width: 800px;
    margin: 0 auto;
  }
  
  .article-title {
    font-size: 2rem;
    color: #333;
    border-bottom: 1px solid #eee;
    padding-bottom: 0.5rem;
  }
  
  .article-content {
    font-family: Georgia, serif;
    line-height: 1.7;
    font-size: 1.1rem;
    color: #333;
  }
  
  .article-content h2 {
    font-size: 1.6rem;
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: #444;
  }
  
  .article-content h3 {
    font-size: 1.4rem;
    margin-top: 1.5rem;
    margin-bottom: 0.8rem;
    color: #555;
  }
  
  .article-content p {
    margin-bottom: 1.2rem;
  }
  
  .article-content img {
    max-width: 100%;
    height: auto;
    margin: 1.5rem 0;
  }
  
  .article-content ul, 
  .article-content ol {
    margin-bottom: 1.2rem;
    padding-left: 2rem;
  }
  
  .article-content li {
    margin-bottom: 0.5rem;
  }
</style>

<%- include('partials/footer') %>